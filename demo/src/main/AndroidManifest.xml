<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.sgprogrammers.smarttablayout.demo"
  >

  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    >

    <activity
      android:name="com.sgprogrammers.smarttablayout.demo.MainActivity"
      android:label="@string/app_name"
      >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
      android:name="com.sgprogrammers.smarttablayout.demo.DemoActivity"
      android:label="@string/app_name"
      android:parentActivityName="com.sgprogrammers.smarttablayout.demo.MainActivity"
      android:theme="@style/AppTheme.NoActionBar"
      />

    <activity
      android:name="com.sgprogrammers.smarttablayout.demo.DemoRtlActivity"
      android:label="@string/app_name"
      android:parentActivityName="com.sgprogrammers.smarttablayout.demo.MainActivity"
      android:theme="@style/AppTheme.NoActionBar"
      />

    <activity
      android:name="com.sgprogrammers.smarttablayout.demo.DemoLikeMediumActivity"
      android:label="@string/app_name"
      android:parentActivityName="com.sgprogrammers.smarttablayout.demo.MainActivity"
      android:theme="@style/AppTheme.NoActionBar"
      />

    <activity
      android:name="com.sgprogrammers.smarttablayout.demo.DemoTabWithNotificationMarkActivity"
      android:label="@string/app_name"
      android:parentActivityName="com.sgprogrammers.smarttablayout.demo.MainActivity"
      android:theme="@style/AppTheme.NoActionBar"
      />

  </application>

</manifest>
